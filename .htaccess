# Sitio Web Prof. Sergio Seguel
# Configuracion Apache

# Pagina de error 404 personalizada
ErrorDocument 404 /404.html

# Habilitar compresion GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache de navegador
<IfModule mod_expires.c>
    ExpiresActive On

    # Imagenes - 1 mes
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"

    # CSS y JS - 1 semana
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"

    # Fuentes - 1 mes
    ExpiresByType font/woff2 "access plus 1 month"
    ExpiresByType font/woff "access plus 1 month"

    # PDFs - 1 mes
    ExpiresByType application/pdf "access plus 1 month"

    # HTML - 1 dia
    ExpiresByType text/html "access plus 1 day"
</IfModule>

# Headers de cache
<IfModule mod_headers.c>
    # Cache publico para assets estaticos
    <FilesMatch "\.(ico|pdf|jpg|jpeg|png|gif|svg|webp|js|css|woff|woff2)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>

    # HTML con revalidacion
    <FilesMatch "\.(html)$">
        Header set Cache-Control "public, max-age=86400, must-revalidate"
    </FilesMatch>
</IfModule>

# Prevenir listado de directorios
Options -Indexes

# Proteger archivos sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Forzar HTTPS (descomentar si el hosting lo soporta)
# RewriteEngine On
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Charset UTF-8 por defecto
AddDefaultCharset UTF-8

# MIME types
AddType application/javascript .js
AddType text/css .css
AddType application/json .json
AddType application/manifest+json .json
